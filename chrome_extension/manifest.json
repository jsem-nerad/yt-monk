{
  "manifest_version": 3,
  "name": "YouTube Monk",
  "version": "0.2.1",
  "description": "Download YouTube videos directly from YouTube using a single button.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["scripts/content.js"]
    }
  ],


  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "/images/logo-round-48px.png"
  },
  "icons": {
    "48": "/images/logo-round-48px.png"
  }
}
